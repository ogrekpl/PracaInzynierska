<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Amount_Must_Be_Set_To_CloseWon</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(StageName, &apos;Closed Won&apos;), ISNULL(Amount))</errorConditionFormula>
    <errorDisplayField>Amount</errorDisplayField>
    <errorMessage>You need to have price to Close Won Opportunity.</errorMessage>
</ValidationRule>
